
config BBQUE_BINDINGS_PYTHON
  depends on TARGET_LINUX_NATIVE
  bool "Python wrapper"
  select EXTERNAL_PYBIND11
  default n
  ---help---
  Build the module to provide the Python wrapper of the RTLib

config BBQUE_BINDINGS_JAVA
  bool "Java wrapper"
  default n
  ---help---
  Build the module to provide the Java wrapper of the RTLib

config BBQUE_BINDINGS_ANDROID
  bool "Android API"
  depends on BBQUE_BINDINGS_JAVA
  depends on TARGET_ANDROID
  default y
  ---help---
  Build the module to provide the Android Archive API of the RTLib
